<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="PatternApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:windowNoTitle">true</item>
        <item name="background">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="navigationViewStyle">@style/AppNavigationStyle</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="background">@color/colorBottomBarBackground</item>
    </style>
</resources>